@model List<Entity.MerchantPaymentEntity>
@{
    ViewData["Title"] = "PaymentByMerchantId";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<div class="container-full">
    <section class="content">
        <div class="row">
            <div class="col-lg-12 mx-auto">
                <div class="box">
                    <div class="box-body">
                        <h4 class="box-title">AllPayment Table</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="bg-success">
                                    <tr>
                                        <th>SrNo</th>
                                        <th>Domain</th>
                                        <th>Amount</th>
                                        <th>Order Id</th>
                                        <th>Currency</th>
                                        <th>Payment Method</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            i++;
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.Domain</td>
                                                <td>@item.Amount</td>
                                                <td>@item.OrderId</td>
                                                <td>@item.Currency</td>
                                                <td>@item.PaymentMethod</td>
                                                <td>@item.Status</td>
                                                <td>
                                                    <a href="@Url.Action("PaymentById", new { id = item.Id })"
                                                       class="btn btn-circle btn-primary btn-xs"
                                                       title="Details">
                                                        <i class="fas fa-info-circle"></i> Details
                                                    </a>
                                                    <a href="javascript:void(0)" class="btn btn-circle btn-danger btn-xs delete-marchant" data-id="@item.Id" title="Delete">
                                                        <i class="ti-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center text-danger">No records found for this merchant.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
